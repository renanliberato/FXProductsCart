<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="main.LoginAppController" alignment="CENTER" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <TextField fx:id="usernameField" promptText="usuario@teste.com" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="minhasenha" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button fx:id="loginButton" text="Entrar" textAlignment="CENTER" onAction="#loginAction"/>
    </HBox>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button fx:id="exitButton" text="Sair" textAlignment="CENTER" onAction="#exitAction"/>
    </HBox>

</GridPane>